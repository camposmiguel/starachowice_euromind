<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_instrument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_guitar"/>

    <TextView
        android:id="@+id/text_view_instrument"
        android:layout_below="@+id/image_view_instrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Guitar"/>
</RelativeLayout>