<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="95dp">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:background="#44000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayoutRanquinkMio">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1ยบ"
            android:id="@+id/textViewPuestoMio"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Usuario"
            android:id="@+id/textViewUsuarioRankingMio"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textViewPuestoMio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Puntos"
            android:id="@+id/textViewPuntosRankig"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:layout_toEndOf="@+id/textViewUsuarioRankingMio"
            android:layout_marginStart="23dp"
            android:layout_marginTop="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayoutRanquinkMio"
        android:layout_alignParentStart="true"></RelativeLayout>
</RelativeLayout>